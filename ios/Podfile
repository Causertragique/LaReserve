# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

# Use RN-provided min_ios_version_supported when available, otherwise fallback
platform :ios, (defined?(min_ios_version_supported) ? min_ios_version_supported : '13.0')
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'LaReserve' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # --------------------------------------------
  # FIX GITHUB ACTIONS "undefined method `map' for nil:NilClass"
  # Ensure `inspections` is defined and is an Array before any pod scripts use it.
  # This avoids calling .map on nil inside generated podspecs or post-install hooks.
  # --------------------------------------------
  if !defined?(inspections) || inspections.nil?
    inspections = []
  end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # process inspections if needed, for example:
    # (inspections || []).each { |i| puts i }
  end
end
